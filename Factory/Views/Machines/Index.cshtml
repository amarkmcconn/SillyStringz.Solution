@using Factory.Models;
@model List<Factory.Models.Machine>;

<div class="container">
<h1>Machines</h1>
<img src=img/machine.gif>
@if (@Model.Count == 0)
{
  <h3>No Machines have been added yet!</h3>  
}

@foreach (Machine machine in Model)
{
    <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
}
</br>
<p>@Html.ActionLink("Add a new Machine", "Create", null, null, new { @class = "myCssClass" })</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "myCssClass" })</p>
</div>