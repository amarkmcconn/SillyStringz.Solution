@model Factory.Models.Engineer;

<div class=container>
<h2>Edit Engineer</h2>

<h4>Edit this Engineer: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.DateHired)
  @Html.TextBoxFor(model => model.DateHired)

  <input class = "myCssClass" type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to Engineers", "Index", null, null,  new {@class = "myCssClass"})</p>
</div>