@using Factory.Models;

<div class="container">
  <h1><a href="https://fontmeme.com/i-hate-youngboy-font/"><img src="https://fontmeme.com/permalink/220527/37be2510edd8dcc68a077339a1507f38.png" alt="i-hate-youngboy-font" border="0"></a><h1>
  <div class="row">
    <div class="column">
      <img src=img/string.jpg>
      <p>@Html.ActionLink("Engineer List", "Index", "Engineers", null, new {@class = "myCssClass"})</p>
      <p>@Html.ActionLink("Machine List", "Index", "Machines", null, new {@class = "myCssClass"})</p>
    </div>
    <div class="column">
      <h4 align="center">Engineers</h4>
      <ol class="center">
      @foreach (Engineer engineer in @ViewBag.Engineers)
      {
        <li>@Html.ActionLink($"{engineer.Name}", "Details", "Engineers", new { id = engineer.EngineerId })</li>
      }
      </ol>
      <h4 align="center">Machines</h4>
      <ol class="center">
      @foreach (Machine machine in @ViewBag.Machines)
      {
        <li>@Html.ActionLink($"{machine.Name}", "Details", "Machines", new { id = machine.MachineId })</li>
      }
      </ol>
    </div>
  </div>
</div>